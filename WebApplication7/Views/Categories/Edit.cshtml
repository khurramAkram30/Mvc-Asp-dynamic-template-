@model Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin.cshtml";
    }

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { @class = "Form" }))
{
    <div class="form-group">
        @Html.HiddenFor(f=> f.Id)
        @Html.LabelFor(f => Model.Name)
        @Html.TextBoxFor(f => Model.Name, new { @class = "form-control" })
        @Html.LabelFor(f => Model.Price)
        @Html.TextBoxFor(f => Model.Price, new { @class = "form-control" })
            </div>

    <input type="submit" class="btn-default" name="name" value="Update" />
}


